{
  "name": "in-memory-rest-api",
  "version": "1.0.0",
  "description": "A simple REST API written in TypeScript using Express with in-memory storage (no DB)",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^6.14.3",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/morgan": "^1.9.4",
    "@types/cors": "^2.8.12",
    "@types/uuid": "^9.0.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0"
  }
}